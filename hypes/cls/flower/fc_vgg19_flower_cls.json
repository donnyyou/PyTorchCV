{
    "dataset": "flower",
    "task": "cls",
    "method": "fc_classifier",
    "data": {
      "num_classes": 17,
      "train_batch_size": 20,
      "val_batch_size": 20,
      "input_size": [128, 128],
      "data_dir": "~/DataSet/Flower",
      "workers": 8
    },
    "test": {
    },
    "train_trans": {
      "flip_ratio": 0.5,
      "trans_seq": ["random_hflip"]
    },
    "val_trans": {
      "flip_ratio": 0.5,
      "trans_seq": ["random_hflip"]
    },
    "trans_params": {
      "random_hflip": {
        "swap_pair": []
      },
      "normalize": {
        "div_value": 255,
        "mean_value": [124, 116, 104],
        "mean": [0.485, 0.456, 0.406],
        "std": [0.229, 0.224, 0.225]
      }
    },
    "details": {
      "color_list": [[255, 0, 0], [255, 85, 0], [255, 170, 0], [255, 255, 0], [170, 255, 0],
                     [85, 255, 0], [0, 255, 0], [0, 255, 85], [0, 255, 170], [0, 255, 255],
                     [0, 170, 255], [0, 85, 255], [0, 0, 255], [85, 0, 255], [170, 0, 255],
                     [255, 0, 255], [255, 0, 170], [255, 0, 85], [255, 0, 170], [255, 0, 85]]
    },
    "checkpoints": {
      "checkpoints_name": "fc_flower_cls",
      "checkpoints_dir": "checkpoints/cls/flower",
      "save_iters": 10000
    },

    "network":{
      "model_name": "vgg19",
      "stride": 32,
      "init": "kaiming_normal"
    },
    "logging": {
      "logfile_level": "info",
      "stdout_level": "info",
      "log_file": "./log/cls/fc_flower_cls.log",
      "log_format": "%(asctime)s %(levelname)-7s %(message)s",
      "rewrite": true
    },
    "lr": {
      "base_lr": 0.00005,
      "lr_policy": "step",
      "step": {
        "gamma": 0.1,
        "step_size": 400
      }
    },
    "solver": {
      "display_iter": 100,
      "test_interval": 1000,
      "max_epoch": 1000
    },
    "optim": {
      "optim_method": "adam",
      "adam": {
        "betas": [0.9, 0.999],
        "eps": 1e-08,
        "weight_decay": 0.0001
      },
      "sgd":{
        "weight_decay": 0.0001,
        "momentum": 0.9
      }
    },
    "cross_entropy_loss": {
      "size_average": true
    }
}
